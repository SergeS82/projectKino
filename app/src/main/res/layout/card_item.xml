<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/default_margin"
    app:cardCornerRadius="@dimen/corner_radius"
    app:cardElevation="@dimen/corner_radius">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        style="@style/layout_secondary_background">

        <androidx.cardview.widget.CardView
            android:id="@+id/film_poster_card"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/corner_radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/film_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/killbillv1"
            android:contentDescription="TODO" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/film_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:text="Убить Била v.1"
            app:layout_constraintStart_toEndOf="@+id/film_poster_card"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"
            style="@style/layout_secondary_background.text_item.medium"/>

        <TextView
            android:id="@+id/film_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:text="Очень очень длинное описание
            Очень очень длинное описание Очень очень длинное описание
            Очень очень длинное описание Очень очень длинное описание Очень очень длинное описание"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/film_poster_card"
            app:layout_constraintTop_toBottomOf="@+id/film_title"
            style="@style/layout_secondary_background.text_item.small"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
